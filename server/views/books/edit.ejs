<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
<div class="container">
    <div class="row">
        <div class="col-md-offset-1 col-md-10">         
            <h1><%=title%></h1>
           
            <form class="form" method="POST" autocomplete="off">
            
                <div class="form-group">
                    <label for="Title">Book Title:</label>
                    <input type="text" class="form-control" 
                    id = "Title"
                    placeholder="Enter the books title"
                    name="Title" 
                    required>
                </div>

                <div class="form-group">
                    <label for="Description">Book Description: </label>
                    <textarea type="text" class="form-control" 
                    id = "Description"
                    placeholder="Enter a short Description of the book"
                    name="Description" 
                    required></textarea>
                </div>

                <div class="form-group">
                    <label for="Price">Book Price:</label>
                    <input type="number" class="form-control" 
                    id = "Price" 
                    placeholder="Enter the Price of the"
                    name="Price" 
                    required>
                </div> 

                <div class="form-group">
                    <label for="Author">Author</label>
                    <input type="text" class="form-control" 
                    id = "Author" 
                    placeholder="Enter books Author"
                    name="Author" 
                    required>
                </div> 

                <div class="form-group">
                    <label for="Genre">Genre</label>
                    <input type="text" class="form-control" 
                    id = "Genre" 
                    placeholder="What is the books Genre"
                    name="Genre" 
                    required>
                </div> 
        
                <button class="btn btn-primary" type = "submit">
                     <i class="fas fa-edit"></i>Update
                </button>

                <a href="/books" class="btn btn-warning"><i class="fas fa-undo"></i>Cancel</a>

            <div class="col-md-offset-1 col-md-10 text-center">              
                <ul class="pagination pagination-lg pager" id="myPager"></ul>  
            </div>        
        </div>
    </div>
</div>


<% include ../partials/footer.ejs %>


